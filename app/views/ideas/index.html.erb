<h1>Listing ideas</h1>
<table class="table">
  <% @ideas.in_groups_of(3) do |group| %>
    <div class="row">
      <% group.compact.each do |idea| %>
        <div class="col-md-3 extraText">
          <%= image_tag idea.picture_url(:thumb) if idea.picture.present? %><hr>
          <h4><%= link_to idea.name, idea %></h4><hr>
          <%= idea.description %>
        </div>
      <% end %>
    </div>
  <% end %>
